<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormulaireActivity">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:layout_width="match_parent"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="56dp"
            android:textColorHint="#bcbcbc">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                style="@style/EditText"
                android:hint="Name of the place"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:layout_width="match_parent"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="56dp"
            android:textColorHint="#bcbcbc">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tag"
                style="@style/EditText"
                android:hint="add a tag"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout android:layout_marginTop="16dp" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_centerVertical="true" android:textColor="@android:color/black" android:layout_marginStart="32dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Private"/>
        <com.github.angads25.toggle.LabeledSwitch
                android:layout_alignParentEnd="true"
                android:id="@+id/switch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:textSize="14sp"
                app:on="false"
                app:textOn="ON"
                app:textOff="OFF"
                app:colorOn="#00c4a6"
                app:colorBorder="#00c4a6"/>
    </RelativeLayout>

    <RatingBar
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0.0" />


</LinearLayout>